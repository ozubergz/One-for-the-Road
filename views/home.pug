extends layout

block content
    div(class="header")
        div(class="bg-img")
        div(class="container-fluid")
            img(class="logo-font" src="https://d2tmw454eqao4e.cloudfront.net/header-logo.png")
            div(class="logo-bottom")
                div(class="business-time")
                    div(class="title") Business Hours
                    table(class="table table-borderless table-condensed")
                        tbody
                            tr
                                th Mon
                                td 6:30am - 9:00pm
                            tr
                                th Tues
                                td 6:30am - 9:00pm
                            tr
                                th Thu
                                td 6:30am - 9:00pm
                            tr
                                th Fri
                                td 6:30am - 9:00pm
                            tr
                                th Sat
                                td 6:30am - 9:00pm
                            tr
                                th Sun
                                td 10:00am - 6:00pm
                div(class="call-info")
                    div(class="info") 347 - 732 - 9732
                    div(class="info") Call In & Pick Up
                    div(class="info") Delivery ($25 up)
                    button(class="btn btn-primary mb-2" id="menu-btn") See Menu
                    div(class='address') 40-25 150th Street
                    div(class='address') Flushing, NY 11354
    div(class="bg-1" id="bg-1")
        div(class="heading mt-2") 
            h3 MENU
        hr
        div(class="main-menu mt-2")
            div(class="side-right-bar mt-4")
                include side-right-bar.pug
            div(class="menu-content mt-4")
                include menu/breakfast.pug
                include menu/brunch.pug
                include menu/hot-sandwiches.pug
                include menu/cold-sandwiches.pug
                include menu/salads.pug
                include menu/peru-chicken.pug
                include menu/crepes.pug
                include menu/baked-goods.pug
                include menu/ice-cream.pug
                include menu/beverages.pug
                include menu/smoothies.pug
            div(class="side-left-bar mt-4")
                include side-left-bar.pug

            

            

