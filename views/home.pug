extends layout

block content
    div(class="header")
        div(class="bg-img")
        div(class="container-fluid")
            img(class="logo-font" src="https://d2tmw454eqao4e.cloudfront.net/header-logo.png")
            div(class="logo-bottom")
                div(class="business-time")
                    div(class="title") Business Hours
                    table(class="table table-borderless table-condensed")
                        tbody
                            tr
                                th Mon
                                td 6:30am - 9:00pm
                            tr
                                th Tues
                                td 6:30am - 9:00pm
                            tr
                                th Thu
                                td 6:30am - 9:00pm
                            tr
                                th Fri
                                td 6:30am - 9:00pm
                            tr
                                th Sat
                                td 6:30am - 9:00pm
                            tr
                                th Sun
                                td 10:00am - 6:00pm
                div(class="call-info")
                    div(class="info") 347 - 732 - 9732
                    div(class="info") Call In & Pick Up
                    div(class="info") Delivery ($25 up)
                    button(class="btn btn-primary" id="menu-btn") See Menu
                    div(class='address') 40-25 150th St, Flushing, NY 11354
    div(class="bg-1" id="bg-1")
        div(class="heading mt-2") MENU
        hr
        div(class="main-menu mt-2")
            div(class="side-bar mt-4")
                ul(class="menu-category")
                    li(class="list" data-linked="breakfast") Good Morning!
                    li(class="list" data-linked="brunch") Brunch
                    li(class="list" data-linked="hot-sandwiches") Hot Sandwiches
                    li(class="list" data-linked="cold-sandwiches") Cold Sandwiches
                    li(class="list" data-linked="salads") Salads
                    li(class="list" data-linked="peru-chicken") Peruvian Chicken
                    li(class="list" data-linked="crepes") Crepes
                    li(class="list" data-linked="baked-goods") Baked Goods
                    li(class="list" data-linked="ice-cream") Ice Cream
                    li(class="list" data-linked="beverages") Beverages
                    li(class="list" data-linked="smoothies") Juice & Smoothie
            div(class="menu-content mt-4")
                include menu/breakfast.pug
                include menu/brunch.pug
                include menu/hot-sandwiches.pug
                include menu/cold-sandwiches.pug
                include menu/salads.pug
                include menu/peru-chicken.pug
                include menu/crepes.pug
                include menu/baked-goods.pug
                include menu/ice-cream.pug
                include menu/beverages.pug
                include menu/smoothies.pug

            

            

